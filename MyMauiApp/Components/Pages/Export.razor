@page "/export"

@using MyMauiApp.Data
@using MyMauiApp.Models
@using MyMauiApp.Services

@inject ExportService ExportService
@inject JournalService JournalService
<div class="export-container">
    <div class="page-header">
        <h1 class="page-title"> Export Journals</h1>
       
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="success-message">
             Export Successful! Your journal has been exported.
            <div class="file-path"> @exportPath</div>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message"> @errorMessage</div>
    }

    <div class="export-card">
        <!-- Your title is back exactly -->
        <div class="section-title">🗓 Select Date Range</div>

        <div class="date-range-inputs">
            <div class="form-group">
                <label>Start Date</label>
                <input type="date"
                       class="date-input"
                       @bind="startDate"
                       @bind:event="oninput"
                       @onchange="UpdatePreview"
                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label>End Date</label>
                <input type="date"
                       class="date-input"
                       @bind="endDate"
                       @bind:event="oninput"
                       @onchange="UpdatePreview"
                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="quick-ranges">
            <button class="quick-range-btn" @onclick="SetLastWeek">Last 7 Days</button>
            <button class="quick-range-btn" @onclick="SetLastMonth">Last 30 Days</button>
            <button class="quick-range-btn" @onclick="SetThisMonth">This Month</button>
            <button class="quick-range-btn" @onclick="SetLastThreeMonths">Last 3 Months</button>
            <button class="quick-range-btn" @onclick="SetThisYear">This Year</button>
            <button class="quick-range-btn" @onclick="SetAllTime">All Time</button>
        </div>

        @if (previewStats != null)
        {
            <div class="preview-section">
                <div class="section-title"> Export Preview</div>

                <div class="preview-stats">
                    <div class="stat-box">
                        <div class="stat-value">@previewStats.TotalEntries</div>
                        <div class="stat-label">Entries</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-value">@previewStats.TotalWords</div>
                        <div class="stat-label">Total Words</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-value">
                            @((previewStats.TotalWords / Math.Max(1, previewStats.TotalEntries)).ToString("F0"))
                        </div>
                        <div class="stat-label">Avg / Entry</div>
                    </div>
                </div>

                @if (previewStats.TotalEntries > 0)
                {
                    <div style="margin-top: 10px; font-size: 12px; color: var(--muted); font-weight: 850;">
                        <strong style="color: var(--text);">Range:</strong> @previewStats.DateRange
                    </div>
                }
            </div>

            @if (previewStats.TotalEntries == 0)
            {
                <div class="note-box">
                    ⚠️ No entries found in the selected date range. Please adjust your dates.
                </div>
            }
        }

        <!-- Your NOTE is back (and kept) -->
        <div class="note-box">
            <strong>Export Information</strong>
            <ul>
                <li>PDF will include all entries in the selected date range</li>
                <li>Each entry shows: date, title, content, moods, tags, and metadata</li>
                
            </ul>
        </div>

        <div class="export-actions">
            <button class="btn btn-primary"
                    @onclick="ExportToPdf"
                    disabled="@(isExporting || (previewStats?.TotalEntries ?? 0) == 0)">
                @if (isExporting)
                {
                    <span> Exporting...</span>
                }
                else
                {
                    <span> Export as PDF</span>
                }
            </button>

            <!-- Reset now styled like dashboard, not grey -->
            <button class="btn btn-secondary" @onclick="ResetForm">Reset</button>
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Today.AddMonths(-1);
    private DateTime endDate = DateTime.Today;
    private ExportStats? previewStats = null;
    private string exportPath = "";
    private string successMessage = "";
    private string errorMessage = "";
    private bool isExporting = false;

    protected override async Task OnInitializedAsync()
    {
        await UpdatePreview();
    }

    private async Task UpdatePreview()
    {
        try
        {
            // Validate dates
            if (startDate > endDate)
            {
                var temp = startDate;
                startDate = endDate;
                endDate = temp;
            }

            previewStats = await ExportService.GetExportStatsAsync(startDate, endDate);
            errorMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load preview: {ex.Message}";
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task ExportToPdf()
    {
        try
        {
            isExporting = true;
            successMessage = "";
            errorMessage = "";
            StateHasChanged();

            if (previewStats?.TotalEntries == 0)
            {
                errorMessage = "No entries to export in the selected date range.";
                return;
            }

            exportPath = await ExportService.ExportToPdfAsync(startDate, endDate);
            successMessage = "Export completed successfully!";
        }
        catch (Exception ex)
        {
            errorMessage = $"Export failed: {ex.Message}";
            exportPath = "";
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private async Task SetLastWeek()
    {
        endDate = DateTime.Today;
        startDate = DateTime.Today.AddDays(-7);
        await UpdatePreview();
    }

    private async Task SetLastMonth()
    {
        endDate = DateTime.Today;
        startDate = DateTime.Today.AddDays(-30);
        await UpdatePreview();
    }

    private async Task SetThisMonth()
    {
        var now = DateTime.Today;
        startDate = new DateTime(now.Year, now.Month, 1);
        endDate = DateTime.Today;
        await UpdatePreview();
    }

    private async Task SetLastThreeMonths()
    {
        endDate = DateTime.Today;
        startDate = DateTime.Today.AddMonths(-3);
        await UpdatePreview();
    }

    private async Task SetThisYear()
    {
        var now = DateTime.Today;
        startDate = new DateTime(now.Year, 1, 1);
        endDate = DateTime.Today;
        await UpdatePreview();
    }

    private async Task SetAllTime()
    {
        var entries = await JournalService.GetEntryDatesAsync();
        if (entries.Any())
        {
            startDate = entries.Min();
            endDate = DateTime.Today;
            await UpdatePreview();
        }
        else
        {
            errorMessage = "No entries found.";
        }
    }

    private async Task ResetForm()
    {
        startDate = DateTime.Today.AddMonths(-1);
        endDate = DateTime.Today;
        exportPath = "";
        successMessage = "";
        errorMessage = "";
        await UpdatePreview();
    }
}


